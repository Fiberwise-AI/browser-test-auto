{
  "script_name": "login_test",
  "description": "Test user registration and login only",
  "version": "1.0",
  "settings": {
    "headless": false,
    "use_temp_instance": true,
    "video_recording": false,
    "take_screenshots": true,
    "auto_cleanup": false
  },
  "steps": [
    {
      "id": "setup",
      "type": "instance",
      "action": "create_temp_instance",
      "description": "Create and start temp FiberWise instance"
    },
    {
      "id": "register_user",
      "type": "browser",
      "action": "register_multiple_users",
      "description": "Register a test user",
      "config": {
        "users": [
          {
            "username": "logintest",
            "email": "logintest@example.com",
            "password": "TestPass123!"
          }
        ]
      }
    },
    {
      "id": "verify_user_exists",
      "type": "command",
      "action": "verify_database",
      "description": "Verify user was registered in database",
      "config": {
        "queries": [
          "SELECT id, username, email FROM users WHERE username = 'logintest';",
          "SELECT COUNT(*) as user_count FROM users;"
        ],
        "database_path": "{{instance_dir}}/local_data/fiberwise.db"
      }
    },
    {
      "id": "test_login",
      "type": "browser",
      "action": "test_login",
      "description": "Test login with registered user",
      "config": {
        "username": "logintest",
        "password": "TestPass123!",
        "keep_page_open": true,
        "take_screenshot": true
      }
    },
    {
      "id": "verify_dashboard",
      "type": "browser",
      "action": "navigate_and_verify",
      "description": "Verify dashboard access after login",
      "config": {
        "url": "/",
        "take_screenshot": true,
        "keep_page_open": true
      }
    }
  ]
}
