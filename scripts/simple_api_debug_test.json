{
  "script_name": "simple_api_debug_test",
  "description": "Debug API key creation using direct API calls",
  "version": "1.0",
  "settings": {
    "headless": false,
    "use_temp_instance": true,
    "video_recording": false,
    "take_screenshots": true,
    "auto_cleanup": false
  },
  "steps": [
    {
      "id": "setup",
      "type": "instance",
      "action": "create_temp_instance",
      "description": "Create and start temp FiberWise instance"
    },
    {
      "id": "register_user",
      "type": "browser",
      "action": "register_multiple_users",
      "description": "Register a test user",
      "config": {
        "users": [
          {
            "username": "apitest",
            "email": "apitest@example.com",
            "password": "TestPass123!"
          }
        ]
      }
    },
    {
      "id": "verify_user_in_db",
      "type": "command",
      "action": "verify_database",
      "description": "Verify user was saved to database",
      "config": {
        "queries": [
          "SELECT id, username, email FROM users WHERE username = 'apitest';",
          "SELECT COUNT(*) as user_count FROM users;"
        ],
        "database_path": "{{instance_dir}}/local_data/fiberwise.db"
      }
    },
    {
      "id": "login_user",
      "type": "browser",
      "action": "test_login",
      "description": "Login to get session",
      "config": {
        "username": "apitest",
        "password": "TestPass123!",
        "keep_page_open": true,
        "take_screenshot": true
      }
    },
    {
      "id": "check_api_endpoint_get",
      "type": "command",
      "action": "verify_api_endpoint",
      "description": "Check GET /api/v1/user/api-keys endpoint",
      "config": {
        "method": "GET",
        "endpoint": "/api/v1/user/api-keys",
        "expected_status": 200
      }
    },
    {
      "id": "check_tables_before",
      "type": "command",
      "action": "verify_database",
      "description": "Check API keys table before creation",
      "config": {
        "queries": [
          "SELECT COUNT(*) as api_key_count FROM api_keys;",
          "PRAGMA table_info(api_keys);",
          "SELECT name FROM sqlite_master WHERE type='table' AND name='api_keys';"
        ],
        "database_path": "{{instance_dir}}/local_data/fiberwise.db"
      }
    },
    {
      "id": "create_via_browser",
      "type": "api_key",
      "action": "create_api_key",
      "description": "Create API key via browser form",
      "config": {
        "key_name": "Debug Test Key",
        "scopes": ["read:all", "write:all"],
        "capture_secret": "debug_api_key",
        "take_screenshot": true,
        "keep_page_open": true
      }
    },
    {
      "id": "check_tables_after",
      "type": "command",
      "action": "verify_database",
      "description": "Check API keys table after creation",
      "config": {
        "queries": [
          "SELECT COUNT(*) as api_key_count FROM api_keys;",
          "SELECT id, name, user_id, created_at FROM api_keys ORDER BY created_at DESC;",
          "SELECT u.username, u.email, COUNT(k.id) as key_count FROM users u LEFT JOIN api_keys k ON u.id = k.user_id GROUP BY u.id;"
        ],
        "database_path": "{{instance_dir}}/local_data/fiberwise.db"
      }
    }
  ]
}
